@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="register-container">
    <h2>Register</h2>

    <form id="registerForm" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>

        <div class="form-group">
            <input type="checkbox" id="termsCheckbox" name="termsCheckbox" required>
            <label for="termsCheckbox">I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</label>
        </div>

        <button type="submit" onclick="validateRegistration()">Register</button>
    </form>

    <div class="error-message" id="registrationMessage"></div>

    <div class="login-link">
        <a asp-page="/LoginFolder/Login">Already have an account? Login Here</a>
    </div>
</div>

<script src="~/js/site.js"></script>
